<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HelpDeskApp</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/odoo.css" asp-append-version="true" />
</head>

<body class="odoo-body">

    <header class="odoo-topbar">
        <div class="odoo-topbar-left">
            <a asp-controller="Home"
               asp-action="Index"
               class="odoo-logo">
                HelpDesk
            </a>

            <nav class="odoo-menu">
                <a asp-controller="Home"
                   asp-action="Index"
                   class="odoo-menu-item">
                    Home
                </a>

                <a asp-controller="Project"
                   asp-action="Index"
                   class="odoo-menu-item">
                    Projects
                </a>
                <a asp-controller="Ticket"
                   asp-action="Index"
                   class="odoo-menu-item">
                    Tickets
                </a>
            </nav>
        </div>

        <div class="odoo-topbar-right">
            <partial name="_LoginPartial" />
        </div>
    </header>
    <main class="odoo-main">
        @RenderBody()
    </main>
    <footer class="odoo-footer">
        © 2026 HelpDeskApp
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
