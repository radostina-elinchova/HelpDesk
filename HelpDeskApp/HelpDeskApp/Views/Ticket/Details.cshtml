@using HelpDeskApp.ViewModels.Models.Ticket
@model TicketDetailsVM

@{
    ViewData["Title"] = "Ticket Details";
}

<div class="odoo-container">
    <div class="odoo-card">

        <div class="odoo-card-header odoo-header-actions">
            <div>
                <h3 class="mb-1">@Model.Title</h3>
                <span class="odoo-subtitle">Ticket details</span>
            </div>

            <span class="odoo-status
                @(Model.Status == "Open" ? "odoo-status-open" :
                                    Model.Status == "Closed" ? "odoo-status-closed" :
                                    "odoo-status-default")">
                @Model.Status
            </span>
        </div>
        <div class="odoo-card-body">
            <div class="row">
                <div class="col-md-8">
                    <div class="odoo-form odoo-form-readonly">

                        <div class="odoo-field">
                            <label class="odoo-label">Project</label>
                            <div class="odoo-value">
                                @Model.Title
                            </div>
                        </div>

                        <div class="odoo-field">
                            <label class="odoo-label">Category</label>
                            <div class="odoo-value">
                                @Model.Category
                            </div>
                        </div>

                        <div class="odoo-field">
                            <label class="odoo-label">Status</label>
                            <div class="odoo-value">
                                @Model.Status
                            </div>
                        </div>

                    </div>
                </div>
               
                <div class="col-md-4">
                    <div class="odoo-side-card">

                        @* <div class="odoo-side-item">
                            <span class="odoo-side-label">Created by</span>
                            <span class="odoo-side-value">@Model.CreatorEmail</span>
                        </div>

                        <div class="odoo-side-item">
                            <span class="odoo-side-label">Created on</span>
                            <span class="odoo-side-value">
                                @Model.CreatedOn.ToString("dd MMM yyyy")
                            </span>
                        </div> *@

                        @if (Model.IsCreator)
                        {
                            <a asp-action="Edit"
                               asp-route-id="@Model.Id"
                               class="btn odoo-btn-primary w-100 mt-3">
                                Edit Ticket
                            </a>
                        }
                    </div>
                </div>

            </div>
        </div>
        <div class="odoo-card-footer">
            <a asp-action="Index"
               class="btn odoo-btn-secondary">
                Back to list
            </a>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}