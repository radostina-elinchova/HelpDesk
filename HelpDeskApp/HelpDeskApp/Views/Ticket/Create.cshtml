@using HelpDeskApp.ViewModels.Models.Ticket

@model TicketFormVM

@{
    ViewData["Title"] = "Create Ticket";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white">
            <h5 class="mb-0 fw-semibold">@ViewData["Title"]</h5>
        </div>

        <div class="card-body">
            <form asp-controller="Ticket" asp-action="Create"
                  asp-route-fromProject="@(Model.ProjectId != 0)"
                  method="post">

                <div class="row">     
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted text-uppercase small">Status</label>
                        
                        <input type="text"
                               asp-for="Status"
                               class="form-control"
                               readonly />
                                                      
                        <input type="hidden" asp-for="StatusId" />
                     
                        <span asp-validation-for="StatusId" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Title"
                               class="form-label text-muted text-uppercase small">
                            Title
                        </label>

                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title"
                              class="text-danger small"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Description"
                               class="form-label text-muted text-uppercase small">
                            Description
                        </label>

                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description"
                              class="text-danger small"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="ProjectId"
                               class="form-label text-muted text-uppercase small">
                            Project
                        </label>

                        @if (Model.ProjectId != 0)
                        {                            
                            <input type="hidden" asp-for="ProjectId" />                          
                            <input class="form-control"
                                   value="@Model.Projects.FirstOrDefault(p => p.Id == Model.ProjectId)?.ProjectName"
                                   readonly />
                        }
                        else
                        {                           
                            <select asp-for="ProjectId"
                                    class="form-select"
                                    id="projectsSelect"
                                    asp-items="@(new SelectList(Model.Projects, "Id", "ProjectName"))">
                                <option value="">Select project</option>
                            </select>
                        }

                        <span asp-validation-for="ProjectId"
                              class="text-danger small"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="CategoryId"
                               class="form-label text-muted text-uppercase small">
                            Category
                        </label>
                        <input type="hidden" asp-for="CreatorId" />
                        <select asp-for="CategoryId"
                                class="form-select"
                                id="categorySelect"
                                asp-items="@(new SelectList(Model.Categories, "Id", "Name"))">
                            <option value="">Select category</option>
                        </select>

                        <span asp-validation-for="CategoryId"
                              class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="SubCategoryId"
                               class="form-label text-muted text-uppercase small">
                            Subcategory
                        </label>

                        <select asp-for="SubCategoryId"
                                class="form-select"
                                id="subCategorySelect"
                                asp-items="@(Model.SubCategories != null
                                            ? new SelectList(Model.SubCategories, "Id", "Name", Model.SubCategoryId)
                                            : null)">
                            <option value="">Select subcategory</option>
                        </select>


                        <span asp-validation-for="SubCategoryId"
                              class="text-danger small"></span>
                    </div>
                </div>            
                <div class="d-flex justify-content-end gap-2 mt-3">
                    <button type="submit"
                            class="btn text-white"
                            style="background-color:#875a7b">
                        Save
                    </button>

                    <a asp-action="Index"
                       class="btn btn-outline-secondary">
                        Cancel
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const categorySelect = document.getElementById("categorySelect");
            const subCategorySelect = document.getElementById("subCategorySelect");

            async function loadSubCategories(categoryId, selectedSubCategoryId = null) {
                subCategorySelect.innerHTML = '<option value="">Select subcategory</option>';

                if (!categoryId) return;

                const response = await fetch(`/Ticket/GetSubCategories?categoryId=${categoryId}`);
                const data = await response.json();

                data.forEach(sub => {
                    const option = document.createElement("option");
                    option.value = sub.id;
                    option.textContent = sub.name;

                    if (selectedSubCategoryId && sub.id == selectedSubCategoryId) {
                        option.selected = true;
                    }

                    subCategorySelect.appendChild(option);
                });
            }

            categorySelect.addEventListener("change", function () {
                loadSubCategories(this.value);
            });
            const initialCategoryId = categorySelect.value;
            const initialSubCategoryId = '@Model.SubCategoryId';

            if (initialCategoryId) {
                loadSubCategories(initialCategoryId, initialSubCategoryId);
            }
        });
    </script>

}
