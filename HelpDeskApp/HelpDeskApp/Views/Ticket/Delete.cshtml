@using HelpDeskApp.ViewModels.Models.Ticket
@model TicketDeleteVM

@{
    ViewData["Title"] = "Delete Ticket";
}

<div class="odoo-container">

    <div class="odoo-action-bar mb-3">
        <h3>@ViewData["Title"]</h3>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="odoo-card">
                <div class="odoo-card-header">
                    <h4 class="mb-0">@Model.Title</h4>

                    <span class="odoo-status
                        @(Model.Status == "Open" ? "odoo-status-open" :
                                                    Model.Status == "Closed" ? "odoo-status-closed" :
                                                    "odoo-status-default")">
                        @Model.Status
                    </span>
                </div>

                <div class="odoo-card-body">

                    <div class="odoo-form odoo-form-readonly">

                        <div class="odoo-field">
                            <label class="odoo-label">Project</label>
                            <div class="odoo-value">
                                @Model.ProjectName
                            </div>
                        </div>

                    </div>

                    <div class="odoo-warning-box mt-3">
                        <strong>Warning</strong><br />
                        Are you sure you want to permanently delete
                        <strong>@Model.Title</strong>?
                    </div>

                </div>
                <div class="odoo-card-footer d-flex justify-content-between">

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit"
                                class="btn odoo-btn-danger">
                            Confirm Delete
                        </button>
                    </form>

                    <a asp-action="Details"
                       asp-route-id="@Model.Id"
                       class="btn odoo-btn-secondary">
                        Cancel
                    </a>

                </div>

            </div>

        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}