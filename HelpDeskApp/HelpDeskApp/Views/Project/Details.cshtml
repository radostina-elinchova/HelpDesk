@model HelpDeskApp.Models.Project.ProjectDetailsVM

@{
    ViewData["Title"] = "Project Details";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">

        <!-- Header -->
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-semibold">@Model.ProjectName</h5>

            @if (User.Identity!.IsAuthenticated && User.IsInRole("Administrator"))
            {
                <a asp-action="Edit"
                   asp-route-id="@Model.Id"
                   class="btn btn-sm text-white"
                   style="background-color:#875a7b">
                    Edit
                </a>
            }
        </div>

        <!-- Body -->
        <div class="card-body">
            <div class="row">
                <!-- LEFT CONTENT -->
                <div class="col-md-8">
                    <div class="mb-3">
                        <small class="text-muted text-uppercase">Description</small>
                        <div class="p-3 bg-light rounded mt-1">
                            @Model.Description
                        </div>
                    </div>
                </div>                
            </div>
        </div>

        <!-- Footer -->
        <div class="card-footer bg-white d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                Back to list
            </a>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
