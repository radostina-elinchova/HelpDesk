@model HelpDeskApp.ViewModels.Models.Project.ProjectEditVM

@{
    ViewData["Title"] = "Edit Project";
}

<div class="odoo-container">
    <div class="odoo-card">

        <!-- Header / Action bar -->
        <div class="odoo-card-header odoo-header-actions">
            <div>
                <h3>Edit Project</h3>
                <p class="odoo-subtitle">Modify project information</p>
            </div>

            <span class="odoo-badge">
                ID: @Model.Id
            </span>
        </div>

        <!-- Body -->
        <div class="odoo-card-body">
            <form asp-action="Edit" method="post" class="odoo-form">
                <input type="hidden" asp-for="Id" />

                <div class="odoo-form-layout">
                    <!-- Main form -->
                    <div class="odoo-form-main">

                        <div class="odoo-field">
                            <label asp-for="ProjectName" class="odoo-label">
                                Project Name
                            </label>
                            <input asp-for="ProjectName" class="odoo-input" />
                            <span asp-validation-for="ProjectName"
                                  class="odoo-error"></span>
                        </div>

                        <div class="odoo-field">
                            <label asp-for="Description" class="odoo-label">
                                Description
                            </label>
                            <textarea asp-for="Description"
                                      rows="4"
                                      class="odoo-input"></textarea>
                            <span asp-validation-for="Description"
                                  class="odoo-error"></span>
                        </div>

                    </div>

                    <!-- Side actions (Odoo-style) -->
                    <div class="odoo-form-side">
                        <div class="odoo-side-card">
                            <span class="odoo-side-title">Actions</span>

                            <div class="odoo-side-actions">
                                <button type="submit"
                                        class="btn odoo-btn-primary">
                                    Save
                                </button>

                                <a asp-action="Index"
                                   class="btn odoo-btn-secondary">
                                    Cancel
                                </a>
                            </div>
                        </div>
                    </div>

                </div>
            </form>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
