@using HelpDeskApp.ViewModels.Models.Project
@model ProjectCreateVM

@{
    ViewData["Title"] = "Create Project";
}

<div class="odoo-container">
    <div class="odoo-card">
        <div class="odoo-card-header">
            <h3>Create Project</h3>
            <p class="odoo-subtitle">
                Fill in the details below to create a new project.
            </p>
        </div>

        <div class="odoo-card-body">
            <form asp-action="Create" method="post" class="odoo-form">

                <div class="odoo-field">
                    <label asp-for="ProjectName" class="odoo-label">
                        Project Name
                    </label>
                    <input asp-for="ProjectName" class="odoo-input" />
                    <span asp-validation-for="ProjectName" class="odoo-error"></span>
                </div>

                <div class="odoo-field">
                    <label asp-for="Description" class="odoo-label">
                        Description
                    </label>
                    <textarea asp-for="Description"
                              rows="4"
                              class="odoo-input"></textarea>
                    <span asp-validation-for="Description" class="odoo-error"></span>
                </div>

                <div class="odoo-card-footer">
                    <div class="odoo-actions">
                        <a asp-action="Index"
                           class="btn odoo-btn-secondary">
                            Cancel
                        </a>

                        <button type="submit"
                                class="btn odoo-btn-primary">
                            Create
                        </button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

