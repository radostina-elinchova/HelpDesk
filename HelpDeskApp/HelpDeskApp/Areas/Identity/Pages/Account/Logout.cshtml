@page
@model LogoutModel

@{
    ViewData["Title"] = "Log out";
}

<div class="odoo-login-container">

    <div class="odoo-login-card text-center">

        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <div class="odoo-login-header">
                <h2>Ready to leave?</h2>
                <p class="odoo-subtitle">
                    Click below to securely log out of your session
                </p>
            </div>

            <form asp-area="Identity"
                  asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Page("/", new { area = "" })"
                  method="post">

                <button type="submit"
                        class="btn odoo-btn-danger odoo-login-btn">
                    Log out
                </button>

            </form>
        }
        else
        {
            <div class="odoo-login-header">
                <h2>Logged Out</h2>
                <p class="odoo-subtitle">
                    You have successfully logged out of the system.
                </p>
            </div>

            <a asp-page="/Account/Login"
               asp-area="Identity"
               class="btn odoo-btn-primary odoo-login-btn">
                Sign in again
            </a>
        }

    </div>

</div>
