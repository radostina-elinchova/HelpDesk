@page
@model LoginModel

@{
    ViewData["Title"] = "Sign in";
}

<div class="odoo-login-container">

    <div class="odoo-login-card">
        <div class="odoo-login-header">
            <h2>Welcome Back</h2>
            <p class="odoo-subtitle">
                Sign in to continue to your workspace
            </p>
        </div>

        <form method="post" class="odoo-form">

            <div asp-validation-summary="ModelOnly"
                 class="odoo-error-summary">
            </div>

            <div class="odoo-field">
                <label asp-for="Input.UserName" class="odoo-label"></label>
                <input asp-for="Input.UserName"
                       class="odoo-input"
                       autocomplete="username" />
                <span asp-validation-for="Input.UserName"
                      class="odoo-error"></span>
            </div>

            <div class="odoo-field">
                <label asp-for="Input.Password" class="odoo-label"></label>
                <input asp-for="Input.Password"
                       type="password"
                       class="odoo-input"
                       autocomplete="current-password" />
                <span asp-validation-for="Input.Password"
                      class="odoo-error"></span>
            </div>

            <button type="submit"
                    class="btn odoo-btn-primary odoo-login-btn">
                Sign in
            </button>

        </form>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
