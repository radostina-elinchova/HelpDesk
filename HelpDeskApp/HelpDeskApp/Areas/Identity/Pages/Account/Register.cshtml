@page
@model RegisterModel

@{
    ViewData["Title"] = "Create Account";
}

<div class="odoo-login-container">

    <div class="odoo-login-card odoo-register-card">

        <div class="odoo-login-header">
            <h2>Create Account</h2>
            <p class="odoo-subtitle">
                Fill in your information to create a new account
            </p>
        </div>
        <form id="registerForm"
              asp-route-returnUrl="@Model.ReturnUrl"
              method="post"
              class="odoo-form">

            <div asp-validation-summary="ModelOnly"
                 class="odoo-error-summary">
            </div>

            <div class="odoo-field">
                <label asp-for="Input.FirstName" class="odoo-label"></label>
                <input asp-for="Input.FirstName"
                       class="odoo-input"
                       autocomplete="given-name" />
                <span asp-validation-for="Input.FirstName"
                      class="odoo-error"></span>
            </div>

            <div class="odoo-field">
                <label asp-for="Input.LastName" class="odoo-label"></label>
                <input asp-for="Input.LastName"
                       class="odoo-input"
                       autocomplete="family-name" />
                <span asp-validation-for="Input.LastName"
                      class="odoo-error"></span>
            </div>

            <div class="odoo-field">
                <label asp-for="Input.Address" class="odoo-label"></label>
                <input asp-for="Input.Address"
                       class="odoo-input" />
                <span asp-validation-for="Input.Address"
                      class="odoo-error"></span>
            </div>

            <div class="odoo-field">
                <label asp-for="Input.UserName" class="odoo-label"></label>
                <input asp-for="Input.UserName"
                       class="odoo-input"
                       autocomplete="username" />
                <span asp-validation-for="Input.UserName"
                      class="odoo-error"></span>
            </div>

            <div class="odoo-field">
                <label asp-for="Input.Email" class="odoo-label"></label>
                <input asp-for="Input.Email"
                       class="odoo-input"
                       autocomplete="email" />
                <span asp-validation-for="Input.Email"
                      class="odoo-error"></span>
            </div>

            <div class="odoo-field">
                <label asp-for="Input.Password" class="odoo-label"></label>
                <input asp-for="Input.Password"
                       type="password"
                       class="odoo-input"
                       autocomplete="new-password" />
                <span asp-validation-for="Input.Password"
                      class="odoo-error"></span>
            </div>

            <div class="odoo-field">
                <label asp-for="Input.ConfirmPassword" class="odoo-label"></label>
                <input asp-for="Input.ConfirmPassword"
                       type="password"
                       class="odoo-input"
                       autocomplete="new-password" />
                <span asp-validation-for="Input.ConfirmPassword"
                      class="odoo-error"></span>
            </div>

            <button type="submit"
                    class="btn odoo-btn-primary odoo-login-btn">
                Create Account
            </button>

        </form>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
